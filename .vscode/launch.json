{
  "$schema": "vscode://schemas/launch",
  "version": "0.2.0",
  "configurations": [
    
    
    {
      "name": "Run 3x-ui",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}",
      "cwd": "${workspaceFolder}",
      "env": {
        "CGO_ENABLED": "1",
        "CC": "gcc",
        "PATH": "C:\\msys64\\mingw64\\bin;C:\\Program Files\\Go\\bin;",
        "XUI_DEBUG": "false"
      },
      "trace": "verbose",
      "console": "integratedTerminal"
    },

    {
      "name": "Run 3x-ui (Debug)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}",
      "cwd": "${workspaceFolder}",
      "env": {
        "XUI_DEBUG": "true"
      },
      "trace": "verbose",
      "console": "integratedTerminal"
    },
    {
      "name": "Run 3x-ui (Debug, custom env)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}",
      "cwd": "${workspaceFolder}",
      "env": {
        "CGO_ENABLED": "1",

        // Set to true to serve assets/templates directly from disk for development
        "XUI_DEBUG": "true",
        // Uncomment to override DB folder location (by default uses working dir on Windows when debug)
        // "XUI_DB_FOLDER": "${workspaceFolder}",
        // Example: override log level (debug|info|notice|warn|error)
        // "XUI_LOG_LEVEL": "debug"
      },
      "trace": "verbose",
      "console": "integratedTerminal"
    }
  ]
}
